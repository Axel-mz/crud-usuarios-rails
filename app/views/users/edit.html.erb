<div class="flex flex-col items-center min-h-screen bg-gray-300 py-10">
  <!-- Botón volver -->
  <div class="w-full max-w-md mb-4">
    <%= link_to "← Volver al listado", users_path,
      class: "text-white bg-gray-600 hover:bg-gray-700 font-medium rounded-lg text-sm px-4 py-2" %>
  </div>

  <!-- Card del formulario -->
  <div class="w-full max-w-md bg-white shadow-md rounded-lg p-6">

    <h2 class="text-xl font-bold text-gray-800 mb-4 text-center">Editar usuario</h2>

    <% if @user.errors.any? %>
      <div class="mb-4 p-4 bg-red-100 border border-red-300 text-red-700 rounded-lg">
        <ul class="list-disc list-inside">
          <% @user.errors.messages.each do |attribute, messages| %>
            <% messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
          <% end %>
        </ul>
      </div>
    <% end %>


    <%= form_with(model: @user, url: user_path(@user), method: :patch, class: "space-y-4") do |f| %>
        <!-- Nombre -->
        <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">Nombre</label>
            <%= f.text_field :name,
            class: "block w-full border-gray-300 rounded-lg shadow-sm focus:ring-blue-500 focus:border-blue-500 #{'border-red-500' if @user.errors[:name].any?}" %>
        </div>

        <!-- Apellido -->
        <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">Apellido</label>
            <%= f.text_field :lastname,
            class: "block w-full border-gray-300 rounded-lg shadow-sm focus:ring-blue-500 focus:border-blue-500" %>
        </div>

        <!-- Email -->
        <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">Email</label>
            <%= f.text_field :email,
            class: "block w-full border-gray-300 rounded-lg shadow-sm focus:ring-blue-500 focus:border-blue-500 #{'border-red-500' if @user.errors[:email].any?}" %>
        </div>

        <!-- Edad -->
        <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">Edad</label>
            <%= f.number_field :age, min: 1, max: 99,
            class: "block w-full border-gray-300 rounded-lg shadow-sm focus:ring-blue-500 focus:border-blue-500" %>
        </div>

        <!-- Botón actualizar -->
        <div class="pt-2">
            <%= f.submit "Guardar",
            class: "w-full text-white bg-blue-600 hover:bg-blue-700 font-medium rounded-lg text-sm px-4 py-2 cursor-pointer" %>
        </div>

        <% end %>

  </div>

</div>
